{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext"], // No DOM library for backend
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}